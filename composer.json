    "keywords": ["microframework","rest","router", "leaf", "php", "framework"],
    "homepage": "https://leaf-docs.netlify.com",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Darko",
            "email": "mickdd22@gmail.com",
            "homepage": "https://mychi.netlify.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "leafs/blade": "^1.2.3",
